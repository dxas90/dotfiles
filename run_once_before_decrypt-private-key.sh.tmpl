#!/bin/sh

yubikey_connected() {
    # returns 0 if there is a YubiKey present
    lsusb \
        | grep -qi '1050:' \
        || return 1
    return 0
}

if yubikey_connected; then
    echo "ðŸ”‘ YubiKey present"
    export YUBIKEY_CONNECTED=1
else
    echo "âš ï¸  No YubiKey detected"
    unset YUBIKEY_CONNECTED
fi

{{ if stat (joinPath .chezmoi.sourceDir "key.txt.age") }}
if [ ! -f "${HOME}/.config/chezmoi/key.txt" ]; then
  mkdir -p "${HOME}/.config/chezmoi"
  chezmoi age decrypt --output "${HOME}/.config/chezmoi/key.txt" --passphrase "{{ .chezmoi.sourceDir }}/key.txt.age"
  chmod 600 "${HOME}/.config/chezmoi/key.txt"
fi
{{ else }}
  echo "ERROR: Private key not found. Please create a key.txt.age file in your dotfiles repository." >&2
{{ end }}
